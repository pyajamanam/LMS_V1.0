@model LMS.App.Web.ViewModels.UserViewModel
@using (Html.BeginForm("UpdateUser", "Manage", FormMethod.Post))
{

    <div class="modal-body">
        <form>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.UserId)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "First name", required = "required", autofocus = "autofocus" })

            </div>
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "First name", required = "required", autofocus = "autofocus" })
            </div>

            <div class="form-group">
                <label for="Country">Country</label>
                @Html.DropDownList(Model.Role, Model.Rolelist)

            </div>
        </form>
    </div>

    <div class="container">
        <h2>Employees Record</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Employee</button><br /><br />
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
    

}
