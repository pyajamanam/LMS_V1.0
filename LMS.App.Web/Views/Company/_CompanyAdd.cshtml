@{
    ViewBag.Title = "Register";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type="text/css">
    span.field-validation-error {
        color: red;
    }
</style>


    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Add Company</div>
        <div class="card-body">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            @Html.LabelFor(m => m.CompanyName)
                        </div>
                        @Html.ValidationMessageFor(m => m.CompanyName)

                    </div>
                    <div class="col-md-6">
                        <div class="form-label-group">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "First name", required = "required", autofocus = "autofocus" })
                            @Html.LabelFor(m => m.Address)
                        </div>
                        @Html.ValidationMessageFor(m => m.Address)
                    </div>
                    <div class="col-md-6">
                        <div class="form-label-group">
                            @Html.TextBoxFor(m => m.Remark, new { @class = "form-control", placeholder = "Remark", required = "required", autofocus = "autofocus" })
                            @Html.LabelFor(m => m.Remark)
                        </div>
                        @Html.ValidationMessageFor(m => m.Remark)
                    </div>
                </div>
            </div>
            <input class="btn btn-primary btn-block" type="submit" value="Submit" />
        </div>
    </div>
    <div class="modal" id="myModal" tabindex="0" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="text-align:center" id="myModalLabel">Add company</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <div class="modal-body">
                        @using (Html.BeginForm("Add", "Company", FormMethod.Post))
                        {
                            <form>
                                <i class="fa fa-camera-retro fa-lg"></i>
                                @*<input type="hidden" class="form-control" id="CompanyId" placeholder="CompanyId" />*@
                                <div class="form-group">
                                    <label for="CompanyId">CompanyId</label>
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "First name", required = "required", autofocus = "autofocus" })
                                    <input type="text" class="form-control" id="CompanyId" placeholder="CompanyId" disabled="disabled" />
                                </div>
                                <div class="form-group">
                                    <label for="CompanyName">CompanyName</label>
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", id= "CompanyName", placeholder = "CompanyName", required = "required", autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    <input type="text" class="form-control" id="Address" placeholder="Address" />
                                </div>
                                <div class="form-group">
                                    <label for="Remark">Remark</label>
                                    <input type="text" class="form-control" id="Remark" placeholder="Remark" />
                                </div>

                            </form>
                        }
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
