@model LMS.App.Web.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type="text/css">
    span.field-validation-error {
        color: red;
    }
</style>
@Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm("Register", "Account"))
{
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Register an Account</div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name", required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(m => m.FullName)
                            </div>
                            @Html.ValidationMessageFor(m => m.FullName)

                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", placeholder = "Designation", required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(m => m.Designation)
                            </div>
                            @Html.ValidationMessageFor(m => m.Designation)

                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Full Name", required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(m => m.UserName)
                            </div>
                            @Html.ValidationMessageFor(m => m.UserName)

                        </div>
                        
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="form-label-group">
                                @Html.DropDownListFor(model => model.CompanyId, Model.Companies, new { @class = "form-control" })

                            </div>
                            @Html.ValidationMessageFor(m => m.CompanyId)

                        </div>
                        <div class="col-md-4">
                            <div class="form-label-group">
                                <div class="form-label-group">
                                    @Html.DropDownListFor(model => model.CountryId, Model.Countries, new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(m => m.CompanyId)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-label-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address", id = "Email", required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(m => m.UserName)
                            </div>
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password", required = "required" })
                                @Html.LabelFor(m => m.ConfirmPassword)
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)

                        </div>
                    </div>
                </div>
                <input class="btn btn-primary btn-block" type="submit" value="Register" />
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/Account/LogOn">Login Page</a>
                <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
            </div>
        </div>
    </div>
}