<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <img src="https://pbs.twimg.com/profile_images/884766854308352000/his8BpuB.jpg" title="MyhdAustria" width="20%" height="20%"> 
               </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("MyHDAustria", "Index", "Home")</li>
                    <li>@Html.ActionLink("AboutTV", "About", "Home")</li>
                    <li>@Html.ActionLink("Packages", "Protected", "Home")</li>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <li>@Html.ActionLink("Super Admin", "SuperAdmin", "Home")</li>
                    }
                    @if (User.IsInRole("Delear"))
                    {
                        <li>@Html.ActionLink("Admin", "Admin", "Home")</li>
                    }
                    @if (User.IsInRole("WebshopBackEnd") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin Or Super Admin", "AdminOrSuperAdmin", "Home")</li>
                    }
                    @if (User.IsInRole("Delear") )
                    {
                        <li>@Html.ActionLink("Delear", "AdminOrAuthor", "Home")</li>
                    }
                    @if (User.IsInRole("Agent"))
                    {
                        <li>@Html.ActionLink("Agent", "AdminOrAuthor", "Home")</li>
                    }
                    @if (User.IsInRole("WebshopBackEnd"))
                    {
                        <li>@Html.ActionLink("Manage Users", "Index","Manage")</li>
                    }
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
